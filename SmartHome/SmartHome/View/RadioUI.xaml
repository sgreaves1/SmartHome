<Window x:Class="SmartHome.View.RadioUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Path=Radio.Name}" Height="100" Width="300"
        Background="Black">
    <StackPanel>
        <Label Foreground="GreenYellow" Content="{Binding Path=Radio.CurrentSong}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <Button Content="Down" ToolTip="Album Down" Command="{Binding Path=DownCommand}">
            </Button>
            <Button Content="Back" ToolTip="Skip Back" Command="{Binding Path=BackCommand}"/>
            <Button Content="Play" ToolTip="Play" Command="{Binding Path=PlayCommand}"/>
            <Button Content="Skip" ToolTip="Skip" Command="{Binding Path=SkipCommand}"/>
            <Button Content="Up" ToolTip="Album Up" Command="{Binding Path=UpCommand}"/>

        </StackPanel>
    </StackPanel>
</Window>
