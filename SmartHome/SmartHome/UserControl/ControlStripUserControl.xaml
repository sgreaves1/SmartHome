<UserControl x:Class="SmartHome.UserControl.ControlStripUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartHome.UserControl"
             xmlns:xamlIconLibrary="clr-namespace:XamlIconLibrary;assembly=XamlIconLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="Root">
    
    
    <StackPanel Orientation="Vertical">
        <Button Width="50" Height="50">
            <xamlIconLibrary:GoogleMaterialIcon Icon="Settings" Width="40" Height="40" Margin="0" Padding="0" IconBorderColor="{StaticResource GradientBlue}" IconBorderThickness="2" Foreground="{StaticResource GradientBlue}"/>
        </Button>
        <Button Width="50" Height="50" Click="ButtonBase_OnClick">
            <xamlIconLibrary:GoogleMaterialIcon Icon="Add" Width="40" Height="40" Margin="0" Padding="0" IconBorderColor="{StaticResource GradientBlue}" IconBorderThickness="2" Foreground="{StaticResource GradientBlue}"/>
        </Button>
    </StackPanel>
</UserControl>
